    <build>
        <filters>
            <filter>${props}</filter>
        </filters>
        <finalName>${projectName}</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

